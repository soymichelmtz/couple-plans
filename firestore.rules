rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAllowedUser() {
      return request.auth != null
  && (request.auth.token.email == "michel@couple-plans.local"
      || request.auth.token.email == "sarahi@couple-plans.local");
    }

    // Workspace doc + subcollections
    match /workspaces/{workspaceId} {
      allow read, write: if isAllowedUser();

      match /plans/{planId} {
        allow read, write: if isAllowedUser();
      }
      
      // Logs subcollection: allow any authenticated user to create a log entry
      // but only the admin (michel) can read logs. Prevent updates/deletes.
      match /logs/{logId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && request.auth.token.email == "michel@couple-plans.local";
        allow update, delete: if false;
      }
    }
  }
}
